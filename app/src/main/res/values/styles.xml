<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:background">@drawable/input</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="input_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>